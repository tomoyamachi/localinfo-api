{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "total": {"type": "integer"},
        "count": {"type": "integer"},
        "limit": {"type": "integer"},
        "offset": {"type": "integer"},
        "result" : {
            "type" : "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {"type": "integer"},
                    "treasure_id": {"type": "integer"},
                    "account_id": {"type": "integer"},
                    "account_name": {"type": "string"},
                    "created_at": {"type": "string"}
                },
                "required": ["id", "treasure_id", "account_id", "created_at"]
            }
        }
    },
    "required": ["count", "limit", "offset", "result"]
}
