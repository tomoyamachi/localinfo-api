{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "total": {"type": "integer"},
        "count": {"type": "integer"},
        "limit": {"type": "integer"},
        "offset": {"type": "integer"},
        "result" : {
            "type" : "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {"type": "integer"},
                    "title": {"type": "string"},
                    "account_id": {"type": "integer"},
                    "account_name": {"type": "string"},
                    "prefecture_id": {"type": "integer"},
                    "area_id": {"type": "integer"},
                    "prefecture_name": {"type": "string"},
                    "area_name": {"type": "string"},
                    "comment": {"type": "string"},
                    "image_url": {"type": "string"},
                    "created_at": {"type": "string"},
                    "updated_at": {"type": "string"}
                },
                "required": ["id", "account_id", "title", "prefecture_id", "area_id",
                             "comment", "image_url", "created_at", "updated_at"]
            }
        }
    },
    "required": ["total", "count", "limit", "offset", "result"]
}
